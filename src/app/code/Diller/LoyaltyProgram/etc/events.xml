<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Event/etc/events.xsd">
    <event name="customer_register_success">
        <observer name="register_member" instance="Diller\LoyaltyProgram\Observer\RegisterMemberOnCustomerRegister" />
    </event>
    <event name="customer_save_after_data_object">
        <observer name="update_customer" instance="Diller\LoyaltyProgram\Observer\UpdateMemberOnCustomerUpdate" />
    </event>
    <event name="checkout_submit_all_after">
        <observer name="register_transaction" instance="Diller\LoyaltyProgram\Observer\RegisterTransactionOnCheckoutSubmitAfter"/>
    </event>
</config>
